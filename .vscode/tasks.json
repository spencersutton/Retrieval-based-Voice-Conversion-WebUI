{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Find References: Check for Unused Symbols (Problems View)",
            "type": "shell",
            "command": "python",
            "args": [
                "find_references.py",
                "${file}",
                "--format",
                "problems",
                "--unused-only"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "never",
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": {
                "owner": "findReferencesUnused",
                "fileLocation": [
                    "absolute"
                ],
                "pattern": {
                    "regexp": "^([^:]+):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            }
        }
    ]
}